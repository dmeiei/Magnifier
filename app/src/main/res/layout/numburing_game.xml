                    android:backgroundTint="@android:color/white"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:text="4" />

                <Button
                    android:id="@+id/numBtn4"
                    android:layout_width="0dp"
                    android:layout_columnWeight="1"
                    android:layout_height="0dp"
